<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/dayTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/weatherImage"
        android:ellipsize="end"
        android:maxLines="1"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Tuesday" />

    <ImageView
        android:id="@+id/weatherImage"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dayTV"
        android:layout_alignBottom="@id/dayTV"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_01d" />

    <TextView
        android:id="@+id/precipitationTV"
        android:layout_alignTop="@+id/weatherImage"
        android:layout_alignBottom="@id/weatherImage"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/weatherImage"
        android:shadowRadius="2"
        android:layout_marginStart="-8dp"
        android:textColor="@color/blue"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="50%" />

    <TextView
        android:id="@+id/tempMaxTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/tempMinTV"
        android:layout_marginEnd="24dp"
        android:maxLines="1"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="23" />

    <TextView
        android:id="@+id/tempMinTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@color/edit_text_bg"
        android:textSize="20sp"
        tools:text="23" />



</RelativeLayout>